{
  "name": "amethyst-launcher",
  "version": "3.0.1",
  "description": "Amethyst Launcher - High-performance Minecraft launcher",
  "author": "Nominor",
  "main": "main.js",
  "homepage": "https://github.com/Nominor/Amethyst",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "start": "electron .",
    "electron-dev": "npm run build && electron .",
    "dist": "npm run build && electron-builder",
    "dist:win": "npm run build && electron-builder --win",
    "dist:dir": "npm run build && electron-builder --dir"
  },
  "build": {
    "appId": "com.amethyst.launcher",
    "productName": "Amethyst Launcher",
    "directories": {
      "output": "dist_electron",
      "buildResources": "assets"
    },
    "files": [
      "main.js",
      "preload.js",
      "minecraft-rpc.js",
      "splash.html",
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/amethyst_launcher.ico",
      "signDlls": false,
      "signingHashAlgorithms": [],
      "forceCodeSigning": false,
      "publisherName": "Amethyst",
      "legalTrademarks": "Amethyst Launcher",
      "artifactName": "${productName}-${version}.exe"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Amethyst Launcher",
      "installerIcon": "assets/amethyst_launcher.ico",
      "uninstallerIcon": "assets/amethyst_launcher.ico",
      "installerHeaderIcon": "assets/amethyst_launcher.ico"
    },
    "portable": {
      "artifactName": "${productName}-${version}.exe"
    }
  },
  "dependencies": {
    "discord-rpc": "^4.0.1",
    "electron-is-dev": "^2.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.24",
    "electron": "^31.0.0",
    "electron-builder": "^24.13.3",
    "postcss": "^8.5.6",
    "sharp": "^0.34.5",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.3.3",
    "vite": "^5.0.0"
  }
}
